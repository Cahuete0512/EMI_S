{% extends 'base.html.twig' %}

{% block title %}Accéder à la soirée{% endblock %}

{% block body %}
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg flex-column flex-md-row navbar-light" style="background: #f0dff8;">
            <form class="form-inline">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">EMI_S</a>
                    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-emoji-sunglasses-fill" viewBox="0 0 16 16">
                        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zM2.31 5.243A1 1 0 0 1 3.28 4H6a1 1 0 0 1 1 1v.116A4.22 4.22 0 0 1 8 5c.35 0 .69.04 1 .116V5a1 1 0 0 1 1-1h2.72a1 1 0 0 1 .97 1.243l-.311 1.242A2 2 0 0 1 11.439 8H11a2 2 0 0 1-1.994-1.839A2.99 2.99 0 0 0 8 6c-.393 0-.74.064-1.006.161A2 2 0 0 1 5 8h-.438a2 2 0 0 1-1.94-1.515L2.31 5.243zM4.969 9.75A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .866-.5z"/>
                    </svg>
                    <a href="{{ path("home")}}" class= "btn btn-lg btn-primary" style="background: linear-gradient(to right,#B0E0E6, #87CEFA);">
                        Accueil
                    </a>
                    <a href="{{ path("ajouter_participant",{'id':soiree.id}) }}" class = "btn btn-lg btn-primary" style="background: linear-gradient(to right,#d8b0ed, #c9a0dc);">
                        Ajouter participant
                    </a>
                    <a href="{{ path("calculer_soiree",{'id':soiree.id})}}" class = "btn btn-lg btn-primary" style="background: linear-gradient(to right,#d8b0ed, #c9a0dc);">
                        Calculer
                    </a>
                </div>
            </form>
        </nav>
    </div>
        <p><h1 class = "text-center"> soirée {{ soiree.nom }} le {{ soiree.date | date("m/d/Y") }} à : {{ soiree.lieu }}</h1>
        <div class="table-responsive">
            <p><table class="table table-bordered table-striped" style="background: #f0dff8;">
                <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Montant</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                {% for p in soiree.participants %}
                    <tr>
                        <td>{{ p.nom }}</td>
                        <td>{{ p.prenom }}</td>
                        <td>{{ p.montantPaye }} €</td>
                        <td>
                            <a href="{{ path("modifier_participant",{'idSoiree':soiree.id, 'idParticipant':p.id}) }}" class = "btn btn-lg btn-primary" style="background: linear-gradient(to right,#563d7c, #c9a0dc);">
                                modifier
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
{% endblock %}

