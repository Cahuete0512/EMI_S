{% extends 'base.html.twig' %}

{% block title %}Gestion des frais de soirée{% endblock %}

{% block body %}
    <h1><span class="badge bg-secondary">Vos remboursements</span></h1>
    <table class="table">
        <tr>
            <th>Nom</th>
            <th>payé</th>
            <th>Remboursements</th>
        </tr>
        {% for p in soiree.participants %}
            {% if p.remboursementsEffectues is not empty %}
                <tr>
                    <td>{{ p.nom }} {{ p.prenom }}</td>
                    <td>{{ p.montantPaye }} €</td>
                    <td>
                        <table>
                            {% for r in p.remboursementsEffectues %}
                            <tr>
                                <td>{{ r.montant }} €</td>
                                <td>{{ r.crediteur.nom }} {{ r.crediteur.prenom }}</td>
                            </tr>
                            {% endfor %}
                        </table>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}