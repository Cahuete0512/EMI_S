{% extends 'base.html.twig' %}

{% block title %}Gestion des frais de soirée{% endblock %}

{% block body %}
    <p><h1 class = "text-center">Remboursements à effectuer</h1>
    <div class="table-responsive">
        <p><table class="table table-bordered table-striped" style="background: #f0dff8;">
            <thead>
            <tr>
                <th>Nom</th>
                <th>payé</th>
                <th>Remboursements</th>
            </tr>
            </thead>
            {% for p in soiree.participants %}
                {% if p.remboursementsEffectues is not empty %}
                    <tr>
                        <td>{{ p.nom }} {{ p.prenom }}</td>
                        <td>{{ p.montantPaye }} €</td>
                        <td>
                            <table>
                                {% for r in p.remboursementsEffectues %}
                                    <tr>
                                        <td> {{ p.nom }} {{ p.prenom }} doit : {{ r.montant }} € <br>
                                            A : {{ r.crediteur.nom }} {{ r.crediteur.prenom }} </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </table>
    </div>
    <blockquote class="blockquote text-center">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    <h1 class="display-5"><mark>{{ message }}</mark></h1>
                </div>
            {% endfor %}
        {% endfor %}
    </blockquote>
{% endblock %}