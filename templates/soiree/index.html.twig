{% extends 'base.html.twig' %}

{% block title %}Gestion des frais de soirée{% endblock %}

{% block body %}
    <h1>Vos soirées</h1>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Nom</th>
            <th>Lieu</th>
        </tr>
        {% for s in soirees %}
            <tr>
                <td>{{ s.date | date("m/d/Y") }}</td>
                <td>{{ s.nom }}</td>
                <td>{{ s.lieu }}</td>
                <td><a href="{{ path("modifier",{'id':s.id}) }}" class = "btn btn-success">
                    Modifier
                </a></td>
                <td><a href="{{ path("supprimer",{'id':s.id}) }}" class = "btn btn-danger">
                    Supprimer
                </a></td>
                <td><a href="{{ path("acceder_soiree",{'id':s.id}) }}" class = "btn btn-success">
                    Accéder
                </a></td>
            </tr>
        {% endfor %}
    </table><br>
    <a href="{{ path("ajouter") }}" class = "btn btn-success">
        Ajouter une soirée
    </a>
{% endblock %}